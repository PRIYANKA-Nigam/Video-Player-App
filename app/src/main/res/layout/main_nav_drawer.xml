<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent" android:layout_height="120dp"
        android:layout_margin="16dp" android:onClick="ClickLogo"
        android:src="@drawable/g"/>
    <TextView
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Get2logics" android:textSize="22sp"
        android:textStyle="bold" android:textAlignment="center"
        android:textColor="#A020F0" android:gravity="center_horizontal"
        android:shadowColor="@android:color/holo_orange_dark"
        android:shadowDx="-15"
        android:shadowDy="-15"
        android:shadowRadius="13"/>
    <View android:layout_width="match_parent"
        android:layout_height="1dp" android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" android:background="#636363"/>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:gravity="center_vertical" android:onClick="ClickHome">
        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:text="Home" android:padding="12dp"
            android:layout_marginStart="16dp" android:layout_marginLeft="16dp"
            android:textColor="#A020F0"
            android:shadowColor="@android:color/holo_orange_dark"
            android:shadowDx="-15"
            android:shadowDy="-15"
            android:shadowRadius="13"/>
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginEnd="48dp"
            android:src="@drawable/home" android:layout_marginRight="48dp" />
    </LinearLayout> <LinearLayout
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal" android:gravity="center_vertical"
    android:onClick="ClickAPK">
    <TextView  android:layout_width="0dp"
        android:layout_height="wrap_content" android:layout_weight="1"
        android:text="Download APK" android:padding="12dp"
        android:layout_marginStart="16dp" android:layout_marginLeft="16dp"
        android:textColor="#A020F0"
        android:shadowColor="@android:color/holo_orange_dark"
        android:shadowDx="-15"
        android:shadowDy="-15"
        android:shadowRadius="13"
        />
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginEnd="48dp"
        android:src="@drawable/apk"
        android:layout_marginRight="48dp" /></LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:gravity="center_vertical" android:onClick="ClickZip">
        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:text="Download Zip" android:padding="12dp"
            android:layout_marginStart="16dp" android:layout_marginLeft="16dp"
            android:textColor="#A020F0"
            android:shadowColor="@android:color/holo_orange_dark"
            android:shadowDx="-15"
            android:shadowDy="-15"
            android:shadowRadius="13"
            />
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginEnd="48dp"
            android:src="@drawable/zip"
            android:layout_marginRight="48dp" /></LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:gravity="center_vertical" android:onClick="ClickCode">
        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:text="View Source Code" android:padding="12dp"
            android:layout_marginStart="16dp" android:layout_marginLeft="16dp"
            android:textColor="#A020F0"
            android:shadowColor="@android:color/holo_orange_dark"
            android:shadowDx="-15"
            android:shadowDy="-15"
            android:shadowRadius="13"
            />
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginEnd="48dp"
            android:src="@drawable/code"
            android:layout_marginRight="48dp" /></LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:gravity="center_vertical" android:onClick="ClickAboutUs">
        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:text="About App" android:padding="12dp"
            android:layout_marginStart="16dp" android:layout_marginLeft="16dp"
            android:textColor="#A020F0"
            android:shadowColor="@android:color/holo_orange_dark"
            android:shadowDx="-15"
            android:shadowDy="-15"
            android:shadowRadius="13"
            />
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginEnd="48dp"
            android:src="@drawable/info"
            android:layout_marginRight="48dp" /></LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:gravity="center_vertical" android:onClick="ClickLogout">
        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:text="Logout" android:padding="12dp"
            android:layout_marginStart="16dp" android:layout_marginLeft="16dp"
            android:textColor="#A020F0"
            android:shadowColor="@android:color/holo_orange_dark"
            android:shadowDx="-15"
            android:shadowDy="-15"
            android:shadowRadius="13"
            />
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginEnd="48dp"
            android:src="@drawable/logout"
            android:layout_marginRight="48dp" /></LinearLayout>
</LinearLayout>