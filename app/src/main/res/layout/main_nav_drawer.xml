<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent" android:layout_height="120dp"
        android:layout_margin="16dp" android:onClick="ClickWebsite"
        android:src="@drawable/g"/>
    <TextView
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Get2logics" android:textSize="22sp"
        android:textStyle="bold" android:textAlignment="center"
        android:textColor="#A020F0" android:gravity="center_horizontal"
        android:shadowColor="@android:color/holo_orange_dark"
        android:shadowDx="-15"
        android:shadowDy="-15"
        android:shadowRadius="13"/>
    <View android:layout_width="match_parent"
        android:layout_height="1dp" android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" android:background="#636363"/>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:gravity="center_vertical" android:onClick="ClickHome">
        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:text="Home" android:padding="12dp"
            android:layout_marginStart="16dp" android:layout_marginLeft="16dp"
            android:textColor="#A020F0"
            android:shadowColor="@android:color/holo_orange_dark"
            android:shadowDx="-15"
            android:shadowDy="-15"
            android:shadowRadius="13"/>
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginEnd="48dp"
            android:src="@drawable/ic_baseline_home_24" android:layout_marginRight="48dp"
            android:background="#A020F0" />
    </LinearLayout> <LinearLayout
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal" android:gravity="center_vertical"
    android:onClick="ClickAPK">
    <TextView  android:layout_width="0dp"
        android:layout_height="wrap_content" android:layout_weight="1"
        android:text="Download APK" android:padding="12dp"
        android:layout_marginStart="16dp" android:layout_marginLeft="16dp"
        android:textColor="#A020F0"
        android:shadowColor="@android:color/holo_orange_dark"
        android:shadowDx="-15"
        android:shadowDy="-15"
        android:shadowRadius="13"
        />
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginEnd="48dp"
        android:src="@drawable/apk2"
        android:layout_marginRight="48dp"
        android:background="#A020F0" /></LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:gravity="center_vertical" android:onClick="ClickZip">
        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:text="Download Zip" android:padding="12dp"
            android:layout_marginStart="16dp" android:layout_marginLeft="16dp"
            android:textColor="#A020F0"
            android:shadowColor="@android:color/holo_orange_dark"
            android:shadowDx="-15"
            android:shadowDy="-15"
            android:shadowRadius="13"
            />
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginEnd="48dp"
            android:src="@drawable/zip2"
            android:layout_marginRight="48dp"
            android:background="#A020F0" /></LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:gravity="center_vertical" android:onClick="ClickCode">
        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:text="View Source Code" android:padding="12dp"
            android:layout_marginStart="16dp" android:layout_marginLeft="16dp"
            android:textColor="#A020F0"
            android:shadowColor="@android:color/holo_orange_dark"
            android:shadowDx="-15"
            android:shadowDy="-15"
            android:shadowRadius="13"
            />
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginEnd="48dp"
            android:src="@drawable/ic_baseline_chat_24"
            android:layout_marginRight="48dp"
            android:background="#A020F0" /></LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:gravity="center_vertical" android:onClick="ClickAboutUs">
        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:text="About App" android:padding="12dp"
            android:layout_marginStart="16dp" android:layout_marginLeft="16dp"
            android:textColor="#A020F0"
            android:shadowColor="@android:color/holo_orange_dark"
            android:shadowDx="-15"
            android:shadowDy="-15"
            android:shadowRadius="13"
            />
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginEnd="48dp"
            android:src="@drawable/ic_baseline_info_24"
            android:layout_marginRight="48dp"
            android:background="#A020F0" /></LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:gravity="center_vertical" android:onClick="ClickLogout">
        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content" android:layout_weight="1"
            android:text="Logout" android:padding="12dp"
            android:layout_marginStart="16dp" android:layout_marginLeft="16dp"
            android:textColor="#A020F0"
            android:shadowColor="@android:color/holo_orange_dark"
            android:shadowDx="-15"
            android:shadowDy="-15"
            android:shadowRadius="13"
            />
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginEnd="48dp"
            android:src="@drawable/ic_baseline_power_settings_new_24"
            android:layout_marginRight="48dp"
            android:background="#A020F0" /></LinearLayout>
    <TextView
        android:layout_marginTop="110dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Follow/Connect me On :"
        android:padding="5dp"
        android:textColor="#000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:shadowColor="@android:color/holo_orange_dark"
        android:shadowDx="-15"
        android:shadowDy="-15"
        android:shadowRadius="13"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center_vertical"
        android:onClick="ClickLogout"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/a"
            android:layout_width="38dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:onClick="ClickLinkedIn"
            android:src="@drawable/lin" />
        <ImageView
            android:id="@+id/b"
            android:layout_width="38dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:onClick="ClickInsta"
            android:src="@drawable/ins" />
        <ImageView
            android:id="@+id/c"
            android:layout_width="38dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:onClick="ClickTwitter"
            android:src="@drawable/twit" />
        <ImageView
            android:id="@+id/d"
            android:layout_width="38dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:onClick="ClickFB"
            android:src="@drawable/fb" />
        <ImageView
            android:id="@+id/e"
            android:layout_width="38dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:onClick="ClickWebsite"
            android:src="@drawable/g" />
        <ImageView
            android:id="@+id/f"
            android:layout_width="38dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:onClick="ClickGithub"
            android:src="@drawable/github" />
        <ImageView
            android:id="@+id/g"
            android:layout_width="38dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:onClick="ClickGitlab"
            android:src="@drawable/gitlab" />
        <ImageView
            android:id="@+id/h"
            android:layout_width="38dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:onClick="ClickHack"
            android:src="@drawable/hack" />
    </LinearLayout>
</LinearLayout>